@model IEnumerable<Pueba1.Models.Libro>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Gestion de Libros</h1>
<br />

<style>

    /* Estilo para la tabla tipo cebra */
    .table tbody tr:nth-child(odd) {
        background-color: white; /* Fila impar con fondo blanco */
    }

    .table tbody tr:nth-child(even) {
        background-color: #fef1f7; /* Fila par con fondo #fef1f7 */
    }

    /* Botón "Registrar libro" */
    .btn-registrar {
        background-color: #D784A6; /* Palo de rosa */
        color: white;
        border: none;
    }

    .btn-registrar:hover {
        background-color: #B3638D; /* Tonalidad más oscura */
        color: white;
    }

    /* Botones de la tabla: Editar, Detalle, Eliminar */
    .btn-tabla {
        background-color: #D784A6; /* Palo de rosa */
        color: white;
        border: none;
    }

    .btn-tabla:hover {
        background-color: #B3638D; /* Tonalidad más oscura */
        color: white;
    }

    /* Botones de exportación */
    .botonCopiar, .botonCsv, .botonExcel, .botonPdf, .botonPrint, .botonColvis {
        background-color: #D784A6 !important; /* Palo de rosa */
        color: white !important;
    }

    .botonCopiar:hover, .botonCsv:hover, .botonExcel:hover, .botonPdf:hover, .botonPrint:hover, .botonColvis:hover {
        background-color: #B3638D !important; /* Tonalidad más oscura */
        color: white !important;
    }

    /* Asegurar que los íconos sean blancos */
    .icon-blanco {
        color: white !important;
    }

    /* Centrar la tabla */
    .table-container {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }

    .table {
        width: auto; /* Ajustar el ancho al contenido */
    }

    /* Contenedor para el botón "Registrar libro" */
    .registrar-container {
        display: flex;
        margin-bottom: 15px;
    }
</style>

<div class="registrar-container">
    <a class="btn btn-registrar" asp-action="Create">
        <i class="fi fi-ss-add icon-blanco"></i> Registrar Libro
    </a>
</div>

<div class="table-container">
    <table class="table" id="example">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Titulo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    Autor
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Publicacion)
                </th>
                <th>
                    Fecha
                </th>
                <th>
                    Categoria
                </th>
                <th>
                    Editorial
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Titulo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreAutor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Publicacion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaRegistro)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CodigoCategoriaNavigation.CodigoCategoria)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NitEditorialNavigation.Nit)
                    </td>
                    <td class="d-flex">
                        <a class="btn btn-tabla mx-1" asp-action="Edit" asp-route-id="@item.Isbn">
                            <i class="fi fi-ss-pencil icon-blanco"></i>
                        </a>
                        <a class="btn btn-tabla mx-2" asp-action="Details" asp-route-id="@item.Isbn">
                            <i class="fi fi-ss-file-circle-info icon-blanco"></i>
                        </a>
                        <a class="btn btn-tabla" asp-action="Delete" asp-route-id="@item.Isbn">
                            <i class="fi fi-ss-trash icon-blanco"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    new DataTable('#example', {
        layout: {
            topStart: {
                buttons: [
                    {
                        extend: 'copy',
                        text: '<i class="fi fi-ss-duplicate icon-blanco"></i>',
                        className: 'botonCopiar btn'
                    },
                    {
                        extend: 'csv',
                        text: '<i class="fi fi-ss-file-csv icon-blanco"></i>',
                        className: 'botonCsv btn'
                    },
                    {
                        extend: 'excel',
                        text: '<i class="fi fi-ss-file-excel icon-blanco"></i>',
                        className: 'botonExcel btn'
                    },
                    {
                        extend: 'pdf',
                        text: '<i class="fi fi-ss-file-pdf icon-blanco"></i>',
                        className: 'botonPdf btn'
                    },
                    {
                        extend: 'print',
                        text: '<i class="fi fi-ss-print icon-blanco"></i>',
                        className: 'botonPrint btn'
                    },
                    {
                        extend: 'colvis',
                        text: 'Filtrar',
                        className: 'botonColvis btn'
                    }

                ]
            }

        },
        scrollX: true,
        initComplete: function (json, settings) {
            $(".dt-buttons").removeClass("dt-buttons");
            $(".dt-button").addClass("botones");
        }
    });
</script>
