@model Pueba1.Models.Libro

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center my-4">Editar Libro</h1>
<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Isbn" />

                        <div class="row">
                            <!-- Columna izquierda -->
                            <div class="col-md-6">
                                <!-- Campo Titulo -->
                                <div class="form-group">
                                    <label asp-for="Titulo" class="control-label font-weight-bold"></label>
                                    <input asp-for="Titulo" class="form-control" />
                                    <span asp-validation-for="Titulo" class="text-danger"></span>
                                </div>

                                <!-- Campo Descripcion -->
                                <div class="form-group">
                                    <label asp-for="Descripcion" class="control-label font-weight-bold"></label>
                                    <input asp-for="Descripcion" class="form-control" />
                                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                                </div>

                                <!-- Campo Publicacion -->
                                <div class="form-group">
                                    <label asp-for="Publicacion" class="control-label font-weight-bold"></label>
                                    <input asp-for="Publicacion" class="form-control" type="date" />
                                    <span asp-validation-for="Publicacion" class="text-danger"></span>
                                </div>

                                <!-- Campo CodigoCategoria -->
                                <div class="form-group">
                                    <label asp-for="CodigoCategoria" class="control-label font-weight-bold"></label>
                                    <select asp-for="CodigoCategoria" class="form-control" asp-items="ViewBag.CodigoCategoria"></select>
                                    <span asp-validation-for="CodigoCategoria" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Columna derecha -->
                            <div class="col-md-6">
                                <!-- Campo NombreAutor -->
                                <div class="form-group">
                                    <label asp-for="NombreAutor" class="control-label font-weight-bold"></label>
                                    <input asp-for="NombreAutor" class="form-control" />
                                    <span asp-validation-for="NombreAutor" class="text-danger"></span>
                                </div>

                                <!-- Campo FechaRegistro -->
                                <div class="form-group">
                                    <label asp-for="FechaRegistro" class="control-label font-weight-bold"></label>
                                    <input asp-for="FechaRegistro" class="form-control" type="date" />
                                    <span asp-validation-for="FechaRegistro" class="text-danger"></span>
                                </div>

                                <!-- Campo NitEditorial -->
                                <div class="form-group">
                                    <label asp-for="NitEditorial" class="control-label font-weight-bold"></label>
                                    <select asp-for="NitEditorial" class="form-control" asp-items="ViewBag.NitEditorial"></select>
                                    <span asp-validation-for="NitEditorial" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Botón de Guardar -->
                        <div class="form-group mt-3">
                            <input type="submit" value="Guardar" class="btn btn-palo-rosa btn-block" />
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Index" class="btn btn-gris btn-lg">Regresar</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Estilos generales para la tarjeta */
        .card {
            margin-top: 10px;
            border-radius: 10px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        /* Botón palo de rosa */
        .btn-palo-rosa {
            background-color: #D784A6; /* Palo de rosa */
            color: white;
            border: none;
            width: 100%; /* Ocupa todo el ancho */
            height: 50px;
            font-size: 16px;
        }

            .btn-palo-rosa:hover {
                background-color: #B3638D; /* Tonalidad más oscura */
            }

        /* Botón gris */
        .btn-gris {
            background-color: #6c757d; /* Gris */
            color: white;
            border: none;
            width: 100%; /* Ocupa todo el ancho */
            height: 50px;
            font-size: 16px;
        }

            .btn-gris:hover {
                background-color: #5a6368; /* Gris más oscuro */
            }

        /* Asegura que los campos estén correctamente alineados */
        .row {
            margin-bottom: 15px;
        }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
