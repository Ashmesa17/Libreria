@model Pueba1.Models.LibrosAutor

@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header text-center">
                <h4>Registrar Libros Autor</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group">
                        <label asp-for="IdAutor" class="control-label">Autor</label>
                        <select asp-for="IdAutor" class="form-control" asp-items="ViewBag.IdAutor" required>
                            <option value="">Seleccione un autor</option>
                        </select>
                        <span asp-validation-for="IdAutor" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Isbn" class="control-label">ISBN</label>
                        <select asp-for="Isbn" class="form-control" asp-items="ViewBag.Isbn" required>
                            <option value="">Seleccione un libro</option>
                        </select>
                        <span asp-validation-for="Isbn" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <input type="submit" value="Registrar" class="btn btn-palo-rosa btn-block" />
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                <a asp-action="Index" class="btn btn-gris">Regresar</a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Estilos generales para la tarjeta */
        .card {
            margin-top: 80px;
            border-radius: 10px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        /* Botón palo de rosa */
        .btn-palo-rosa {
            background-color: #D784A6; /* Palo de rosa */
            color: white;
            border: none;
            width: 100%;
            height: 50px;
        }

            .btn-palo-rosa:hover {
                background-color: #B3638D; /* Tonalidad más oscura */
            }

        /* Botón gris */
        .btn-gris {
            background-color: #6c757d; /* Gris */
            color: white;
            border: none;
            width: 100%;
            height: 40px;
        }

            .btn-gris:hover {
                background-color: #5a6368; /* Gris más oscuro */
            }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
