@model Pueba1.Models.Editoriale

@{
    ViewData["Title"] = "Edit";
}

<div class="container">

    <h1 class="my-4 text-center">Editar Editorial</h1>

    <hr />
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header text-center">
                    <h4>Editar Editorial</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Nit" />

                        <!-- Campo Nombres -->
                        <div class="form-group">
                            <label asp-for="Nombres" class="control-label">Nombres</label>
                            <input asp-for="Nombres" class="form-control" />
                            <span asp-validation-for="Nombres" class="text-danger"></span>
                        </div>

                        <!-- Campo Telefono -->
                        <div class="form-group">
                            <label asp-for="Telefono" class="control-label">Teléfono</label>
                            <input asp-for="Telefono" class="form-control" />
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                        </div>

                        <!-- Campo Direccion -->
                        <div class="form-group">
                            <label asp-for="Direccion" class="control-label">Dirección</label>
                            <input asp-for="Direccion" class="form-control" />
                            <span asp-validation-for="Direccion" class="text-danger"></span>
                        </div>

                        <!-- Campo Email -->
                        <div class="form-group">
                            <label asp-for="Email" class="control-label">Correo Electrónico</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                      

                        <!-- Campo Sitioweb -->
                        <div class="form-group">
                            <label asp-for="Sitioweb" class="control-label">Sitio Web</label>
                            <input asp-for="Sitioweb" class="form-control" />
                            <span asp-validation-for="Sitioweb" class="text-danger"></span>
                        </div>

                        <!-- Botón de Guardar -->
                        <div class="form-group mt-3">
                            <input type="submit" value="Guardar" class="btn btn-palo-rosa btn-block" />
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Index" class="btn btn-gris btn-lg">Regresar</a>
                </div>
            </div>
        </div>
    </div>

</div>

@section Styles {
    <style>
        /* Estilos generales para la tarjeta */
        .card {
            margin-top: 10px;
            border-radius: 10px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        /* Botón palo de rosa */
        .btn-palo-rosa {
            background-color: #D784A6; /* Palo de rosa */
            color: white;
            border: none;
            width: 100%; /* Ocupa todo el ancho */
            height: 50px;
            font-size: 16px;
        }

            .btn-palo-rosa:hover {
                background-color: #B3638D; /* Tonalidad más oscura */
            }

        /* Botón gris */
        .btn-gris {
            background-color: #6c757d; /* Gris */
            color: white;
            border: none;
            width: 100%; /* Ocupa todo el ancho */
            height: 50px;
            font-size: 16px;
        }

            .btn-gris:hover {
                background-color: #5a6368; /* Gris más oscuro */
            }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
