@model Pueba1.Models.Autor

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <h4>Detalles</h4>
    <hr />
    <div class="card shadow-lg mx-auto" style="max-width: 600px;">
        <div class="card-body">
            <div class="row">
                <!-- Detalles en la misma fila -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="font-weight-bold">Nombre:</label>
                        <p>@Html.DisplayFor(model => model.Nombre)</p>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-bold">Apellido:</label>
                        <p>@Html.DisplayFor(model => model.Apellido)</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label class="font-weight-bold">Nacionalidad:</label>
                        <p>@Html.DisplayFor(model => model.Nacionalidad)</p>
                    </div>
                </div>
            </div>

            <!-- Botones uno debajo del otro -->
            <div class="row mt-4">
                <div class="col-md-12">
                    <a asp-action="Edit" asp-route-id="@Model?.IdAutor" class="btn btn-palo-rosa btn-block mb-3">Editar</a>
                </div>
                <div class="col-md-12">
                    <a asp-action="Index" class="btn btn-gris btn-block">Regresar</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Estilos generales para la tarjeta */
        .card {
            margin-top: 20px;
            border-radius: 10px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        /* Botón palo de rosa */
        .btn-palo-rosa {
            background-color: #D784A6; /* Palo de rosa */
            color: white;
            border: none;
            height: 50px;
            font-size: 16px;
        }

            .btn-palo-rosa:hover {
                background-color: #B3638D; /* Tonalidad más oscura */
            }

        /* Botón gris */
        .btn-gris {
            background-color: #6c757d; /* Gris */
            color: white;
            border: none;
            height: 50px;
            font-size: 16px;
        }

            .btn-gris:hover {
                background-color: #5a6368; /* Gris más oscuro */
            }

        /* Estilo para los textos dentro de los campos */
        .form-group {
            margin-bottom: 15px;
        }

        .font-weight-bold {
            font-weight: bold;
        }

        /* Asegura que los botones sean del mismo tamaño */
        .btn-block {
            width: 100%;
        }
    </style>
}
