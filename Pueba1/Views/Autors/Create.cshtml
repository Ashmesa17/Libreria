@model Pueba1.Models.Autor

@{
    ViewData["Title"] = "Create";
}

<div class=" row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header text-center">
                <h4>Registrar Autor</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label">Nombre</label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del autor" required />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Apellido" class="control-label">Apellido</label>
                        <input asp-for="Apellido" class="form-control" placeholder="Ingrese el apellido del autor" required />
                        <span asp-validation-for="Apellido" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Nacionalidad" class="control-label">Nacionalidad</label>
                        <input asp-for="Nacionalidad" class="form-control" placeholder="Ingrese la nacionalidad del autor" required />
                        <span asp-validation-for="Nacionalidad" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <input type="submit" value="Registrar" class="btn btn-palo-rosa btn-block" />
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                <a asp-action="Index" class="btn btn-gris">Regresar</a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Estilos generales para la tarjeta */
       

        .card {
            margin-top:20px;
            border-radius: 10px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        /* Botón palo de rosa */
        .btn-palo-rosa {
            background-color: #D784A6; /* Palo de rosa */
            color: white;
            border: none;
            width: 100%;
            height:50px;
        }

            .btn-palo-rosa:hover {
                background-color: #B3638D; /* Tonalidad más oscura */
            }

        /* Botón gris */
        .btn-gris {
            background-color: #6c757d; /* Gris */
            color: white;
            border: none;
            width: 100%;
            height: 40px;
        }

            .btn-gris:hover {
                background-color: #5a6368; /* Gris más oscuro */
            }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
